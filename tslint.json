{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-immutable"
  ],
  "rules": {
    "max-line-length": [
      120
    ],
    "member-access": [
      "check-accessor"
    ],
    "no-duplicate-variable": true,
    "no-implicit-dependencies": false,
    "no-parameter-reassignment": true,
    "no-submodule-imports": [
      true,
      "@angular/cdk/portal",
      "@angular/common/http",
      "@angular/core",
      "@angular/core/testing",
      "@angular/platform-browser",
      "primeng/autocomplete"
    ],
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "ionView.*" //ionViewCanEnter is not recognized by tslint as being used
      }
    ],
    "no-var-keyword": true,
    "object-literal-shorthand": [
      true,
      "never"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": [
      false
    ],
    "typedef": [
      true,
      "call-signature"
    ],
    "curly": false
  }
}